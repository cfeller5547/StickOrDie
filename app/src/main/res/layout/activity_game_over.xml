<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".GameOverActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/imageViewCharacter"
        android:layout_width="@dimen/_53sdp"
        android:layout_height="@dimen/_54sdp"
        android:layout_centerInParent="true"
        android:scaleType="fitXY"
        android:src="@drawable/characterdying"
        android:translationY="@dimen/_80sdp" />

    <TextView
        android:id="@+id/gameOver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/_48sdp"
        android:fontFamily="@font/audiowide"
        android:text="GAME OVER"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="@dimen/_48ssp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/play_again_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/gameOver"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/_35sdp"
        android:background="@color/red"
        android:fontFamily="@font/audiowide"
        android:padding="@dimen/_7ssp"
        android:text="Play Again"
        android:textAlignment="center"
        android:textSize="@dimen/_18ssp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/displayScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/_81sdp"
        android:fontFamily="@font/audiowide"
        android:text="score"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="@dimen/_18ssp" />

    <TextView
        android:id="@+id/highScoreLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/displayScore"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/audiowide"
        android:text="High Score"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="@dimen/_18ssp"
        android:translationY="@dimen/_67sdp" />

</RelativeLayout>